<div class="events-main">
  {{!-- <div class="events-weather">
  {{weather-view weather}}
  </div> --}}

    <h4>Upcoming Events</h4>
    <ul>
    {{#if session.isAuthenticated}}
    <li>{{#link-to 'events.create' class="btn-header"}}{{fa-icon 'fa-calendar-plus-o'}} New event{{/link-to}}</li>
    {{else}}
    {{/if}}
    {{#each model as |event|}}
        {{#unless event.isNew}}
        <li>
        <h3>{{event.title}}</h3>
        <p>{{event.date}}</p>
        {{#link-to 'events.show' event}}Event Details{{/link-to}}
        </li>
        {{/unless}}
    {{/each}}
    </ul>

</div>

<div class="calendar">
{{full-calendar events=events}}
