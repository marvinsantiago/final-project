<h2>Popular Activities</h2>
<span>{{#link-to 'activities.create'}}+ New{{/link-to}}</span>
<span>{{#link-to 'activities'}}Search{{/link-to}}</span>

{{#each model as |activity|}}
    {{#unless activity.isNew}}

    <h3>{{activity.name}}</h3>
    <p>{{activity.category}}</p>
    <a href="{{activity.url}}">{{activity.url}}</a>

    {{/unless}}
{{/each}}

{{outlet}}

