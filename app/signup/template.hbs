{{!-- {{signup-form user=model save='save'}} --}}


<div id="form">
<form class="signup-form" {{action 'signup' email password on='submit'}}>
<h2>Sign Up</h2>
<label for="signup-email">Email</label>
  {{input type='email' value=email}}

<label for="signup-password">Password</label>
  {{input type='password' value=password}}

    <button id='save' type='submit'>Sign Up</button>
</form>
    <div class="image">
        <img src="/images/activities1.jpg" alt="activities">
    </div>
</div>


