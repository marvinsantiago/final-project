<div id="form">
<form class="event-form" {{action 'save' on='submit'}}>
<label for="event-title">Title</label>
  {{input type='text' value=title required=true}}

<label for="event-location">Location</label>
  {{input type='text' value=location required=true}}

<label for="event-date">Event Start Date</label>
{{pikaday-input value=start format="MM/DD/YYYY"}}

<label for="event-price">Event End Date</label>
{{pikaday-input value=end format="MM/DD/YYYY"}}

<label for="event-url">Website</label>
  {{input type='text' value=url required=true}}

<label for="event-price">Price</label>
  {{input type='text' value=price}}

<label for="event-description">Description</label>
  {{input type='text' value=description required=true}}

    <button type='submit'>Save</button>
</form>
</div>
